# =====================================================
# .htaccess server - Carpeta Node.js
# Ubicación: /home/muninuev/api-documents/server/.htaccess
# =====================================================

# Habilitar RewriteEngine
RewriteEngine On

# =====================================================
# OPTIMIZACIÓN PARA ARCHIVOS ESTÁTICOS
# =====================================================

# Servir archivos PDF directamente sin proxy (MUCHO MÁS RÁPIDO)
# Esto evita que pasen por Node.js
<FilesMatch "\.pdf$">
    # Deshabilitar proxy para PDFs
    RewriteEngine Off
    
    # Headers de cache agresivo para PDFs (1 hora)
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=3600"
        Header set X-Content-Type-Options "nosniff"
        Header set X-Frame-Options "SAMEORIGIN"
    </IfModule>
    
    # Compresión deshabilitada para PDFs (ya están comprimidos)
    SetEnv no-gzip 1
</FilesMatch>

# =====================================================
# PROXY A NODE.JS (Solo para rutas API)
# =====================================================

# NO hacer proxy si es un archivo físico existente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# NO hacer proxy para la carpeta uploads
RewriteCond %{REQUEST_URI} !^/uploads/

# Proxy todas las demás peticiones al servidor Node.js
RewriteRule ^(.*)$ http://localhost:3000/$1 [P,L]

# =====================================================
# HEADERS PARA PROXY
# =====================================================

<IfModule mod_headers.c>
    # Preservar información del cliente original
    RequestHeader set X-Forwarded-For %{REMOTE_ADDR}e
    RequestHeader set X-Forwarded-Proto https
    RequestHeader set X-Forwarded-Host %{HTTP_HOST}e
    RequestHeader set X-Real-IP %{REMOTE_ADDR}e
    
    # CORS (manejado por Express, pero por si acaso)
    Header always set Access-Control-Allow-Origin "https://archivo.muninuevoimperial.gob.pe"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header always set Access-Control-Allow-Credentials "true"
</IfModule>

# =====================================================
# SEGURIDAD
# =====================================================

# Denegar acceso a archivos sensibles
<FilesMatch "\.(env|log|sql|json|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Excepto package.json si es necesario
<Files "package.json">
    Order deny,allow
    Allow from all
</Files>

# Proteger node_modules
RedirectMatch 403 ^/server/node_modules

# =====================================================
# OPTIMIZACIÓN DE RENDIMIENTO
# =====================================================

# Compresión (solo para respuestas Node.js, no PDFs)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache agresivo para archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive on
    
    # PDFs - 1 hora
    ExpiresByType application/pdf "access plus 1 hour"
    
    # Otros recursos
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
</IfModule>

# =====================================================
# LÍMITES DE UPLOAD (Para Multer)
# =====================================================

# Incrementar límites si es necesario
<IfModule mod_php7.c>
    php_value upload_max_filesize 400M
    php_value post_max_size 400M
    php_value max_execution_time 600
    php_value max_input_time 600
</IfModule>

<IfModule mod_php8.c>
    php_value upload_max_filesize 400M
    php_value post_max_size 400M
    php_value max_execution_time 600
    php_value max_input_time 600
</IfModule>